@model IEnumerable<PyroDB.Models.Chemical>

<h1>Chemicals</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GHS)
            </th>
            @if (User.IsInRole(Roles.Admin))
            {
                <th>
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(p => p.Name))
        {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.ID">@item.Name<br>@item.Symbol</a>
            </td>
            <td>
                @foreach (var v in Chemical.GetAvailableGHS())
                {
                    @if (item.GHS.HasFlag(v))
                    {
                        var img = "images\\" + v.ToString() + ".svg";
                        <img src="@img" alt="@v.ToString()" width="50px" />
                    }
                }
            </td>
            @if (User.IsInRole(Roles.Admin))
            {
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> <br>
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            }
        </tr>
        }


    </tbody>
</table>

@if (User.IsInRole(Roles.Admin))
{
    <a asp-action="Create">Add new chemical</a>
}
