@model PyroDB.Models.Chemical

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts
{
    <script type="text/javascript">
        var proptable = @Json.Serialize(Model.GetProperties());
    </script>
    <script src="@Url.Content("~/js/PreviewAndPrintLabel.js")"></script>
    <script src="@Url.Content("http://code.jquery.com/jquery-1.4.2.min.js")" type="text/javascript" charset="UTF-8"></script>
    <script src="@Url.Content("http://www.labelwriter.com/software/dls/sdk/js/DYMO.Label.Framework.3.0.js")" type="text/javascript" charset="UTF-8"></script>
}


<h1>Details</h1>

<div>
    <h4>Chemical</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Symbol)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Symbol)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GHS)
        </dt>
        @*
            @{foreach (GHSSymbols flag in Enum.GetValues(Model.GHS.GetType()).Cast<Enum>().Where(Model.GHS.HasFlag))
                {
                    var img = "images\\" + flag.ToString() + ".svg";
                    <dt class="col-sm-10">
                        <img src="@img" alt="@flag.ToString()" width="64px" />
                    </dt>
                }
            }*@


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
    </dl>
</div>

@if (User.Identity.IsAuthenticated)
{

    

    <select id="labelData" name="labelData">
        @foreach (var v in Model.Labels)
        {
            <option value="@v.Data">@v.Name</option>
        }

    </select>


    <div class="content">
        <div id="labelImageDiv">
            <img id="labelImage" src="" alt="label preview" />
        </div>

        <div class="printControls">
            <div id="printersDiv">
                <label for="printersSelect">Printer:</label>
                <select id="printersSelect"></select>
            </div>

            <div id="printDiv">
                <button id="printButton">Print</button>
                <!--            <a id="printButton"><img src="" alt=""/>Print</a>-->
            </div>
        </div>
    </div>
}

<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
